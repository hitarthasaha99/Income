@page "/dashboard/his/block_7c_3"
@using Blazored.FluentValidation
@using FluentValidation
@using Income.Common.HIS2026
@using Income.Database.Models.Common
@using Income.Database.Models.HIS_2026
@using Income.Validators.HIS2026
@using Income.Viewmodels
@using System.Linq.Expressions
@using System.Reflection
@inject IJSRuntime JSRuntime
@layout Income.Components.Layout.DashboardLayout
@inject NavigationManager NavigationManager
@inject IToastService toastService
@inject Comment_vm comment_vm
@inject Warning_VM warningVM
@inject LocalizationService Loc
@inject IValidator<Tbl_Block_7c> Validator

<div class="main-content">
    <CommonContentHeader SelectedFsuId="@SessionStorage.SelectedFSUId" survey_time="@survey_time" />
    
    @if (editContext != null)
    {
        <EditForm EditContext="editContext">
            <FluentValidationValidator />
            
            <div class="card custom-card">
                <div class="card-header">
                    <h5 class="card-title">
                        <span class="text-primary me-1">Block 7c:</span>
                        Income from Self-employment - Non-agriculture Activity
                    </h5>
                    @* add comment *@
                    @if (SessionStorage.GetUserRole() != SessionStorage.UserRole.JSO)
                    {

                        <div class="card-tools d-flex justify-content-end align-items-end p-2">
                            <NavLink class="btn btn-primary" onclick="@(() => commentModal.Open())"><i class="fi fi-rr-comment-alt me-2"></i>Comment</NavLink>
                        </div>
                    }
                    
                </div>
                <div class="row px-3 py-2">
                    <div class="col">
                        For Non-Agricultural Establishment <span class="text-primary">(entry against col. 8 or col. 9 is code 2 for at least one member of the household) </span>
                    </div>
                </div>
                <div class="card-body p-0">
                    <fieldset disabled="@(SessionStorage.GetUserRole() != SessionStorage.UserRole.JSO)">
                    <div class="table-responsive">
                        <table class="table table-bordered align-middle mb-0">
                            <tbody>
                                <tr>
                                    <td class="text-center">
                                        <label class="form-label">
                                            <span class="form-badge me-0">Q7.11</span>
                                        </label>
                                    </td>
                                    <td>
                                        Imputed value of goods consumed (out of total production through the activity as mentioned in Q 7.9) by the household during last month
                                        or
                                        Imputed value of goods / services (out of total production through the activity as mentioned in Q 7.9) bartered to other households during last month (in whole no. of Rs.)
                                    </td>
                                    <td>
                                        <input type="number" disabled="@(SessionStorage.FSU_Submitted)" class="form-control form-control-sm no-spinner" value="@fields.item_7_11" onkeypress="return /^(\d*)$/.test(event.target.value + event.key)"
                                               @oninput="e =>
                                               {
                                                   UpdateFieldAndValidate(() => fields.item_7_11, e);
                                               }" />
                                          <ValidationMessage For="@(() => fields.item_7_11)" />
                                      </td>
                                  </tr>


                                <tr>
                                    <td class="text-center">
                                        <label class="form-label">
                                            <span class="form-badge me-0">Q7c.9</span>
                                        </label>
                                    </td>
                                    <td>Gross Profit / Loss before tax realized by the establishment during last month (in whole no. of Rs.)</td>
                                    <td>
                                        <input type="number" disabled class="form-control form-control-sm no-spinner" value="@fields.item_7_12" onkeypress="return /^(\d*)$/.test(event.target.value + event.key)"
                                               @oninput="e =>
                                               {
                                                   UpdateFieldAndValidate(() => fields.item_7_12, e);
                                               }" />
                                          <ValidationMessage For="@(() => fields.item_7_12)" />
                                        @if (!string.IsNullOrEmpty(item_9_warning))
                                        {
                                            <div class="text-success form-text">
                                                @item_9_warning
                                            </div>
                                        }
                                    </td>
                                  </tr>
                                  @* new field add when value <0  *@
                                    @if (isItemEnable)
                                    {
                                        
                                    <tr>
                                    <td>
                                        <label class="form-label">
                                            <span class="form-badge">Q7c.9.1</span>
                                        </label>
                                    </td>
                                        <td>Cost of input is more than gross value of receipts, please check the entries and provide suitable clarifications in following codes </td>
                                    <td>
                                                <select class="form-select" value="@fields.item_7_13" @onchange="OnDroupdownChanged">
                                                <option value="">-Select-</option>
                                                <option value="1">a. Production not yet started</option>
                                                <option value="2">b. Seasonal activity </option>
                                                <option value="3">c. No operation is carried out during the reference period   </option>
                                                <option value="4">d. Others (specify in text box) </option>
                                            </select>
                                                @if (!string.IsNullOrEmpty(droupdown_warning))
                                                {
                                                    <div class="form-text text-danger" style="white-space: pre-line;">
                                                        @droupdown_warning
                                                    </div>
                                                }
                                                @if (isselectOther)
                                                {

                                                    <div>
                                                        <textarea class="form-control mt-2"
                                                                  rows="2"
                                                                  maxlength="50"
                                                                  @oninput="OnRemarksClear"
                                                                  placeholder="Please specify here..." @bind="fields.remarks">
            </textarea>
                                                        @if (!string.IsNullOrEmpty(droupdown_remarks))
                                                        {
                                                            <div class="form-text text-danger" style="white-space: pre-line;">
                                                                @droupdown_remarks
                                                            </div>
                                                        }
                                                    </div>
                                                }
                                    </td>
                                  </tr>
                                    }
                            </tbody>
                        </table>
                    </div>
                    </fieldset>
                </div>
            </div>
        </EditForm>

    }

</div>
<div class="footer">
    @* Remarks Card *@
    <div class="card custom-card">
        <div class="card-header">
            <h5 class="card-title m-0">
                Remarks
            </h5>
        </div>
        <fieldset disabled="@(SessionStorage.GetUserRole() != SessionStorage.UserRole.JSO)">

        <div class="card-body">
                <textarea maxlength="500" class="form-control w-100" rows="2" @bind="block_1.block_7c_remark" placeholder="Enter your remarks here..." oninput="validateRemarks(event)"></textarea>
        </div>
        </fieldset>
    </div>


    <div class="row">
        <div class="col-sm-6">
            <button type="button" class="btn btn-outline-secondary me-auto" onclick="@GoBack"><i class="fi fi-rr-angle-left me-1"></i>Back</button>
        </div>
        <div class="col-sm-6">
            <div class="d-flex align-items-center justify-content-end">
                @if (SessionStorage.GetUserRole() == SessionStorage.UserRole.JSO)
                {
                    
                <NavLink class="btn btn-outline-primary me-2" @onclick="@(() => Save(false))"><i class="fi fi-rr-disk me-1"></i>Save</NavLink>
                }
                <NavLink class="btn btn-primary" @onclick="@(() => Save(true))">Next<i class="fi-rr-angle-right ms-1"></i></NavLink>
            </div>
        </div>

    </div>

</div>

<CommentModal @ref="commentModal"
              MemberList=null
              QuestionList="@(new List<string>(){"7.11", "7c.9"})"
              Block="7C_3" />


@code {
    Tbl_Block_7c fields = new();
    List<Tbl_Block_7c_NIC> NICBlock7 = [];
    int NICSUM = 0;
    int ActivitySum = 0;
    List<Tbl_Block_7c_Q10> Q10 = [];
    EditContext editContext;
    bool isItemEnable = false;
    bool isselectOther = false;
    ValidationMessageStore messageStore;
    DBQueries dB = new();
    private Tbl_Block_1 block_1 = new();
    CommonQueries commonQueries = new();
    CommentModal commentModal = default!;
    bool Q9Needed = false;
    bool isAdd;
    DateTime survey_time = DateTime.Now;
    string remarks = string.Empty;
    string item_9_warning = string.Empty;
    string droupdown_warning = string.Empty;
    string droupdown_remarks = string.Empty;

    async void GoBack()
    {
        NavigationManager.NavigateTo("/dashboard/his/block_7c_2");

        // await JSRuntime.InvokeVoidAsync("__handleGoBack");
        return;
    }

    protected override async Task OnInitializedAsync()
    {
        Tbl_Visited_Blocks vb = new Tbl_Visited_Blocks
        {
            block_uri = "/dashboard/his/block_7c_3",
            block_title = "HIS Block 7c_3",
            block_code = CommonEnum.his_block_7c_3.ToString(),
        };
        await commonQueries.InsertVisitedBlock(vb);
        NICBlock7 = await dB.Fetch_SCH_HIS_Block7_NICList();
        block_1 = await dB.FetchSingleForFsuAndHhdAsync<Tbl_Block_1>() ?? null;

        Q10 = await dB.Fetch_SCH_HIS_Block7_Q10_List();
        NICSUM = (int)Math.Min(NICBlock7?.Sum(x => (long)(x.GrossValue ?? 0)) ?? 0L, int.MaxValue);
        ActivitySum = (int)Math.Min(Q10?.Sum(x => (long)(x.item_10_11 ?? 0)) ?? 0L,int.MaxValue);

        var block3 = await dB.Fetch_SCH_HIS_Block3(SessionStorage.selected_hhd_id);
        if (block3 != null && block3.Count > 0)
        {
            Q9Needed = block3.Any(x => x.item_8 == 2 || x.item_9 == 2);
        }
        await LoadData();

        editContext = new EditContext(fields);
        messageStore = new ValidationMessageStore(editContext);
        editContext.OnFieldChanged += EditContext_OnFieldChanged;
        
        if (SessionStorage.GetUserRole() != SessionStorage.UserRole.JSO)
        {
            survey_time = fields.survey_timestamp.GetValueOrDefault();
        }
        StateHasChanged();
    }

    private void EditContext_OnFieldChanged(object? sender, FieldChangedEventArgs e)
    {
        // Clear validation messages for this specific field
        messageStore.Clear(e.FieldIdentifier);

        // Update validation state
        editContext.NotifyValidationStateChanged();
    }

    private async Task LoadData()
    {
        fields = await dB.Fetch_SCH_HIS_Block7C(SessionStorage.selected_hhd_id);
        if (fields == null)
        {
            fields = new Tbl_Block_7c()
            {
                id = Guid.NewGuid()
            };
        }
        else
        {
            fields.item_7_12 = (NICSUM + fields.item_7_11.GetValueOrDefault()) - ActivitySum;
            if (fields.item_7_12.GetValueOrDefault() < 0)
            {
                if (!fields.item_7_13.HasValue)
                {
                    item_9_warning = "Loss reported in Q. 7c.9 \nPlease Choose an option";
                }
                isItemEnable = true;
                isselectOther = fields?.item_7_13 == 4;
            }
        }

    }

    private void UpdateFieldAndValidate(Expression<Func<int?>> field, ChangeEventArgs e)
    {
        var identifier = FieldIdentifier.Create(field);

        // Try parse
        int? value = null;
        if (!string.IsNullOrWhiteSpace(e.Value?.ToString()) &&
            int.TryParse(e.Value?.ToString(), out var v))
        {
            value = v;
        }

        // 1️⃣ Update the actual model field
        var memberExpr = (MemberExpression)field.Body;
        var prop = (PropertyInfo)memberExpr.Member;
        prop.SetValue(fields, value);

        fields.item_7_12 = (NICSUM + fields.item_7_11.GetValueOrDefault()) - ActivitySum;
        CheckItem9Warning();

        if(fields.item_7_12 > 0)
        {
            // If value is Positive (or 0), hide the section
            isItemEnable = false;

            // OPTIONAL: Reset the dropdown and remarks so old data isn't saved/validated
            fields.item_7_13 = null;
            fields.remarks = string.Empty;

            // Reset UI flags for the "Other" textbox
            isselectOther = false;

            // Clear any lingering validation messages for the hidden fields
            droupdown_warning = string.Empty;
            droupdown_remarks = string.Empty;
        }
        // 2️⃣ Clear previous errors
        messageStore?.Clear(identifier);

        // 3️⃣ Notify Blazor validation system
        editContext?.NotifyFieldChanged(identifier);
    }

    void CheckItem9Warning()
    {
        try
        {
            item_9_warning = string.Empty;
            if(fields.item_7_12.GetValueOrDefault() < 0 && !fields.item_7_13.HasValue)
            {
                item_9_warning = "Loss reported in Q. 7c.9 \nPlease Choose an option";
                isItemEnable = true;
                isselectOther = fields?.item_7_13 == 4;

            }
            
        }
        catch (Exception ex)
        {

        }

    }
    private void OnDroupdownChanged(ChangeEventArgs e)
    {
        // update bound value
        if (int.TryParse(e.Value?.ToString(), out var v))
        {
            fields.item_7_13 = v;
            item_9_warning = string.Empty;
        }
        else
            fields.item_7_13 = null;

        CheckItem9Warning();
        droupdown_warning = string.Empty;
        droupdown_remarks = string.Empty;

        // show only when 5 (Others) is selected, hide otherwise
        isselectOther = fields?.item_7_13 == 4;
    }
    //Remarks field clear after enter anything
    private void OnRemarksClear(ChangeEventArgs e)
    {
        fields.remarks = e.Value?.ToString().Trim();
        droupdown_remarks = string.Empty;

        StateHasChanged();
    }

    private async Task Save(bool is_go_next = false)
    {
        try
        {
            droupdown_warning = string.Empty;
            droupdown_remarks = string.Empty;
            if (isItemEnable)
            {
                // if (fields.item_7_13 == null)
                // {
                //     droupdown_warning = "Please choose an option for Q5.9.1";
                //     toastService.ShowError("Please select clarification for Q5.9.1");
                //     return;
                // }

                // If "Others" selected but remarks empty
                if (fields.item_7_13 == 4 && string.IsNullOrWhiteSpace(fields.remarks))
                {
                    droupdown_remarks = "Please specify remarks for 'Others'";
                    toastService.ShowError("Please specify remarks for 'Others'");
                    return;
                }
            }
            if (SessionStorage.GetUserRole() != SessionStorage.UserRole.JSO)
            {
                NavigationManager.NavigateTo("/dashboard/his/block_7d");
                return;
            }
            // if (!codeListEntryNeeded)
            // {
            //     NavigationManager.NavigateTo("/dashboard/his/block_7b");
            //     return;
            // }

            messageStore.Clear();
            var validation = Validator.Validate(fields);

            foreach (var error in validation.Errors)
            {
                var fieldIdentifier = new FieldIdentifier(fields, error.PropertyName);
                messageStore.Add(fieldIdentifier, error.ErrorMessage);
            }
            editContext.NotifyValidationStateChanged();

            if (!validation.IsValid)
            {
                toastService.ShowError("Please resolve all the errors");
                return;
            }
            else
            {
                //CheckItem9Warning();
                if (fields.item_7_12.GetValueOrDefault() < 0 && !fields.item_7_13.HasValue)
                {
                    warningVM.AddWarning(item_9_warning, "HIS", "7C", "7C.9", SessionStorage.selected_hhd_id);
                }
                
                await warningVM.SaveWarningAsync("HIS", "7C");
                int saved = await dB.Save_SCH_HIS_Block7C(fields);
                if (saved > 0)
                {
                    toastService.ShowSuccess("Saved successfully");
                }
                else
                {
                    toastService.ShowSuccess("Data could not be saved");
                }
            }

            if (!is_go_next)
            {
                return;
            }
            if (block_1 != null)
            {
                await dB.SaveAsync<Tbl_Block_1>(block_1);
            }
           
            NavigationManager.NavigateTo("/dashboard/his/block_7d");
         
        }
        catch (Exception ex)
        {

        }
    }
}
