@page "/dashboard/his/block_11b"
@layout Income.Components.Layout.DashboardLayout
@inject NavigationManager NavigationManager
@inject IToastService toastService
@using FluentValidation
@using Income.Database.Models.Common
@using Income.Database.Models.HIS_2026
@using Microsoft.AspNetCore.Components.Forms
@using System.Linq.Expressions
@using System.Reflection
@inject IJSRuntime JSRuntime
@inject IValidator<Tbl_Block_11b> Validator


<div class="my2">
    <CommonContentHeader SelectedFsuId="@SelectedFsuId" survey_time="@survey_time" />
    <div class="card card-style2">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h3 class="card-title m-0 d-flex align-items-center">
                <span class="text-primary me-2">Block 11b: Particulars of direct tax (income tax, professional tax, etc.) paid</span>
            </h3>
            @* <button class="btn btn-primary" @onclick="@(() => HandleModal("ADD"))">
                <i class="fi fi-rr-plus me-1"></i>Add
            </button> *@
        </div>
        @* Card Body *@
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-bordered table-striped mb-0 text-center">
                    <thead>
                        <tr>
                            <th>S.no.of the member</th>
                            <th>Name of the member</th>
                            <th>Whether paid any direct tax during last financial year? <br /> (yes-1, no-2) </th>
                            <th>
                                Amount of direct tax paid (net of refunds) in last financial year (in Rs.)
                            </th>
                        </tr>
                        <tr>
                            <th>(1)</th>
                            <th>(2)</th>
                            <th>(3)</th>
                            <th>(4)</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var member in showDataTable11B)
                        {
                            <tr>
                                <td>@member.item_1</td>
                                <td>@member.item_2</td>
                                <td>@member.item_3</td>
                                <td>@member.item_4</td>
                                <td class="d-flex align-items-center">
                                    <button class="btn btn-sm btn-primary me-2"
                                            @onclick="@(() => HandleModal("UPDATE", member))">
                                        <i class="bi bi-pencil-square me-1"></i>Edit
                                    </button>
                                    
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="mb-3 px-2">
                    <label for="remarksTextarea" class="form-label">Remarks</label>
                    <textarea class="form-control" id="remarksTextarea" rows="3" placeholder="Enter remarks here"></textarea>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <button class="btn btn-outline-primary"><i class="bi bi-chevron-left me-1" onclick="@GoBack"></i>Back</button>
        </div>
        <div class="col-sm-6">
            <div class="d-flex align-items-center justify-content-end">
                <NavLink class="btn btn-outline-primary" @onclick="@(() => ValidateAndSave(true))">Next<i class="bi bi-chevron-right ms-1"></i></NavLink>
            </div>
        </div>

    </div>

    @* Model Popup When Click Add Button *@
    <Modal @ref="AddModal" id="addModal" CloseOnEscape="false" UseStaticBackdrop="true" ShowCloseButton="false" Fullscreen="ModalFullscreen.ExtraLargeDown">
        <HeaderTemplate>
            <h5 class="modal-title">@((isAdd ? "Add Member" : "Update Member"))</h5>
        </HeaderTemplate>

        <BodyTemplate>
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    @if (editContext != null)
                    {
                        <EditForm EditContext="editContext">
                            <div class="modal-body">
                                <div class="row">

                                    <div class="col-sm-6 mb-3">
                                        <label class="form-label fw-bold">
                                            1. S.no.of the member
                                        </label>
                                        <input type="number" readonly class="form-control form-control-sm" value="@table11B.item_1" disabled />
                                    </div>

                                    <div class="col-sm-6 mb-3">
                                        <label class="form-label fw-bold">
                                            2. Name of Member
                                        </label>
                                        <input value="@table11B.item_2" readonly class="form-control form-control-sm"/>

                                    </div>

                                    <div class="col-sm-6 mb-3">
                                        <label class="form-label fw-bold">
                                            3. Whether paid any direct tax during last financial year? (yes-1, no-2)
                                        </label>
                                        <select value="@table11B.item_3"
                                                @onchange="e =>
                                                {
                                                    UpdateFieldAndValidate(() => table11B.item_3, e);
                                                    item_3Condition(e);
                                                }"
                                                  class="form-select form-select-sm">
                                              <option value="">-Select-</option>
                                              <option value="1">1-yes</option>
                                              <option value="2">2-no</option>

                                        </select>
                                        <ValidationMessage For="@(() => table11B.item_3)" />
                                    </div>
                                    <div class="col-sm-6 mb-3">
                                        <label class="form-label fw-bold">
                                            4. Amount of direct tax paid (net of refunds) in last financial year (in Rs.)
                                        </label>
                                        <input type="number" class="form-control form-control-sm no-spinner" onkeypress="return /^(\d*)$/.test(event.target.value + event.key)" value="@table11B.item_4" disabled="@(!is11B_4Enable)"
                                               @oninput="e => UpdateFieldAndValidate(() => table11B.item_4, e)" />
                                        <ValidationMessage For="@(() => table11B.item_4)" />
                                    </div>
                                </div>
                            </div>


                        </EditForm>
                    }
                </div>
            </div>
        </BodyTemplate>
        <FooterTemplate>
            <button class="btn btn-outline-secondary me-auto" @onclick="@(() => HandleModal("CLOSE"))">Close</button>
            <button type="submit" @onclick="@(() => ValidateAndSave())" class="btn btn-primary" form="YourEditFormId"><i class="fi fi-rr-disk me-1"></i>@((isAdd ? "Save" : "Update"))</button>
        </FooterTemplate>
    </Modal>

</div>

@code {
    int SelectedFsuId = SessionStorage.SelectedFSUId;
    private CommonConfig commonConfig = new CommonConfig();
    DateTime survey_time = DateTime.Now;
    //Create Object Tbl_Block_11b
    private Tbl_Block_11b table11B = new();
    //Store Data Using List
    Modal AddModal = default!;
    private List<Tbl_Block_11b> showDataTable11B = new();
    private bool error = false;
    private String? item_2Error = null;
    private string? item_3Error = null;
    private bool is11B_4Enable = false;
    CommonQueries commonQueries = new();
    DBQueries dB = new();

    EditContext editContext;
    ValidationMessageStore messageStore;

    async void GoBack()
    {
        await JSRuntime.InvokeVoidAsync("__handleGoBack");
        return;
    }


    protected override async Task OnInitializedAsync()
    {
        Tbl_Visited_Blocks vb = new Tbl_Visited_Blocks
        {
            block_uri = "/dashboard/his/block_11b",
            block_title = "HIS Block 11b",
            block_code = CommonEnum.sch_0_0_block_11b.ToString(),
        };

        // Insert the visited block record asynchronously
        await commonQueries.InsertVisitedBlock(vb);

        await SyncBlock11b();
        await LoadData();
        StateHasChanged();
    }

    private async Task LoadData()
    {
        showDataTable11B = await dB.Fetch_SCH_HIS_Block11b(SessionStorage.selected_hhd_id);
    }

    public async Task SyncBlock11b()
    {
        var block3Members = await dB.Fetch_SCH_HIS_Block3(SessionStorage.selected_hhd_id);

        var block11bList = await dB.Fetch_SCH_HIS_Block11b(SessionStorage.selected_hhd_id);

        // Step 3: Create missing
        foreach (var m in block3Members)
        {
            if (!block11bList.Any(x => x.fk_block_3 == m.id))
            {
                await dB.Save_SCH_HIS_Block11b(new Tbl_Block_11b
                {
                    id = Guid.NewGuid(),
                    fk_block_3 = m.id,
                    hhd_id = m.hhd_id,
                    item_1 = m.serial_no,
                    item_2 = m.item_2,
                    is_updated = false
                });
            }
        }

        // Step 4: Update changed
        foreach (var row in block11bList)
        {
            var member = block3Members.FirstOrDefault(x => x.id == row.fk_block_3);
            if (member != null)
            {
                bool updated = false;

                if (row.item_1 != member.serial_no)
                {
                    row.item_1 = member.serial_no;
                    updated = true;
                }

                if (row.item_2 != member.item_2)
                {
                    row.item_2 = member.item_2;
                    updated = true;
                }

                if (updated)
                    await dB.Save_SCH_HIS_Block11b(row);
            }
        }

        // Step 5: Remove orphans
        foreach (var row in block11bList
            .Where(x => !block3Members.Any(m => m.id == x.fk_block_3)))
        {
            await dB.DeleteEntryAsync<Tbl_Block_11b>(row.id);
        }
    }


    private void UpdateFieldAndValidate(Expression<Func<int?>> field, ChangeEventArgs e)
    {
        var identifier = FieldIdentifier.Create(field);

        int? value = null;
        if (!string.IsNullOrWhiteSpace(e.Value?.ToString()) &&
            int.TryParse(e.Value?.ToString(), out var v))
        {
            value = v;
        }

        var memberExpr = (MemberExpression)field.Body;
        var prop = (PropertyInfo)memberExpr.Member;
        prop.SetValue(table11B, value);

        messageStore.Clear(identifier);

        editContext?.NotifyFieldChanged(identifier);
    }




    //Check the 11b_3 yes then enable 11b_4 input field
    private void item_3Condition(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();

        if (value == "1")
        {
            // If YES → enable
            is11B_4Enable = true;
        }
        else
        {
            // If NO or blank → disable + clear
            is11B_4Enable = false;
            table11B.item_4 = null;
            var fieldIdentifier = new FieldIdentifier(table11B, nameof(table11B.item_4));
            messageStore.Clear(fieldIdentifier);
            editContext.NotifyValidationStateChanged();
        }

        item_3Error = null;
    }

    //Save Data And show List
    private async Task ValidateAndSave(bool is_go_next = false)
    {
        try
        {
            if (SessionStorage.GetUserRole() != SessionStorage.UserRole.JSO)
            {
                NavigationManager.NavigateTo("/dashboard/his/block_A");
                return;
            }

            if (is_go_next)
            {
                if(showDataTable11B.Count > 0 && showDataTable11B.Any(x => x.is_updated == false))
                {
                    toastService.ShowError("Please save all the entries before proceeding");
                    return;
                }
                else
                {
                    NavigationManager.NavigateTo("/dashboard/his/block_A");
                    return;
                }
            }

            // Clear previous errors
            messageStore.Clear();

            // Validate model using FluentValidation
            var validationResult = Validator.Validate(table11B);

            // Add errors to message store for display in EditForm
            foreach (var error in validationResult.Errors)
            {
                var fieldIdentifier = new FieldIdentifier(table11B, error.PropertyName);
                messageStore.Add(fieldIdentifier, error.ErrorMessage);
            }
            editContext.NotifyValidationStateChanged();

            if (!validationResult.IsValid)
            {
                toastService.ShowError("Please correct the errors and try again");
                return;
            }

            // Save to database
            var saved = await dB.Save_SCH_HIS_Block11b(table11B);
            if (saved > 0)
            {
                await AddModal.HideAsync();
                await LoadData();
                toastService.ShowSuccess("Details updated successfully");
            }
            else
            {
                toastService.ShowError("Failed to update details. Please try again.");
            }

            if (is_go_next)
            {
                // Navigate to the next block/page
                if (showDataTable11B.Count > 0 && showDataTable11B.Any(x => x.is_updated == false))
                {
                    toastService.ShowError("Please save all the entries before proceeding");
                    return;
                }
                NavigationManager.NavigateTo("/dashboard/his/block_A");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
        
    }

    //Clear all error when input any thing
    private void clearItem2Error() => item_2Error = null;
    private void clearItem3Error() => item_3Error = null;
    bool isAdd = false;

    async Task HandleModal(string action = "", Tbl_Block_11b? data = null)
    {
        try
        {
            if (action == "UPDATE")
            {
                isAdd = false;

                if (data != null)
                {
                    // Load existing data
                    table11B = ObjectCloneHelper.ShallowCopy(data);
                    editContext = new EditContext(table11B);
                    messageStore = new ValidationMessageStore(editContext);
                    editContext.OnFieldChanged += EditContext_OnFieldChanged;

                    // Enable amount input if tax paid
                    is11B_4Enable = table11B.item_3 == 1;

                    await AddModal.ShowAsync();
                }
            }
            else if (action == "CLOSE")
            {
                await AddModal.HideAsync();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
    }
    private void EditContext_OnFieldChanged(object? sender, FieldChangedEventArgs e)
    {
        messageStore.Clear(e.FieldIdentifier);
        editContext.NotifyValidationStateChanged();
    }

}

