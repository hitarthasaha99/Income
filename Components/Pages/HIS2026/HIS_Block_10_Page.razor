    //Object
    private Tbl_Block_10? model = new();
    EditContext editContext;
    ValidationMessageStore messageStore;
    DBQueries dQ = new DBQueries();

    protected async override Task OnInitializedAsync()
    {
        try
        {
            // Load existing data from database or initialize a new model
            model = await dQ.Fetch_SCH_HIS_Block10() ?? null;
            if (model == null)
            {
                model = new Tbl_Block_10
                {
                    id = Guid.NewGuid(),
                };
            }
            editContext = new EditContext(model);
            messageStore = new ValidationMessageStore(editContext);
        }
        catch (Exception ex)
        {
            await loggingService.LogError("HIS_Block_10_Page_OnInitializedAsync", ex);
        }
        StateHasChanged();
    }


    //On Input comon Method
    private void UpdateFieldAndValidate(Expression<Func<int?>> field, ChangeEventArgs e)
    {
        var identifier = FieldIdentifier.Create(field);

        // Try parse
        int? value = null;
        if (!string.IsNullOrWhiteSpace(e.Value?.ToString()) &&
            int.TryParse(e.Value?.ToString(), out var v))
        {
            value = v;
        }
        var memberExpr = (MemberExpression)field.Body;
        var prop = (PropertyInfo)memberExpr.Member;
        prop.SetValue(model, value);
        // ValidateModel();
        messageStore.Clear(identifier);
        editContext?.NotifyFieldChanged(identifier);


    }

    private async Task ValidateAndSave(bool is_go_next = false)
    {
        try
        {
            if (SessionStorage.GetUserRole() != SessionStorage.UserRole.JSO)
            {
                // Only JSO can save
                NavigationManager.NavigateTo("/dashboard/his/block_11a");
                return;
            }
            messageStore.Clear();
            var validation = Validator.Validate(model);

            foreach (var error in validation.Errors)
            {
                var fieldIdentifier = new FieldIdentifier(model, error.PropertyName);
                messageStore.Add(fieldIdentifier, error.ErrorMessage);
            }
            editContext.NotifyValidationStateChanged();

            if (!validation.IsValid)
            {
                toastService.ShowError("Please resolve all the errors");
                return;
            }
            else
            {
                int saved = await dQ.Save_SCH_HIS_Block10(model);
                if (saved > 0)
                {
                    toastService.ShowSuccess("Saved successfully");
                }
                else
                {
                    toastService.ShowSuccess("Data could not be saved");
                }
            }

            if (!is_go_next)
            {
                return;
            }
            else
            {
                NavigationManager.NavigateTo("/dashboard/his/block_11a");
            }
        }
        catch (Exception ex)
        {
            await loggingService.LogError("HIS_Block_10_Page_ValidateAndSave", ex);
        }
        
    }

    private void handleCalculate()
    {
        // Weekly items (convert to monthly)
        decimal weeklySum = (model.item_1 ?? 0) + (model.item_2 ?? 0);
        decimal weeklyToMonthly = weeklySum / 7m * 30m;

        // Monthly items (use as-is)
        decimal monthlySum = (model.item_3 ?? 0) + (model.item_4 ?? 0) +
                            (model.item_5 ?? 0) + (model.item_6 ?? 0) +
                            (model.item_7 ?? 0) + (model.item_8 ?? 0) +
                            (model.item_9 ?? 0) + (model.item_10 ?? 0) +
                            (model.item_11 ?? 0) + (model.item_12 ?? 0);

        // Annual items (convert to monthly)
        decimal annualSum = (model.item_13 ?? 0) + (model.item_14 ?? 0) +
                           (model.item_15 ?? 0) + (model.item_16 ?? 0) +
                           (model.item_17 ?? 0) + (model.item_18 ?? 0) +
                           (model.item_19 ?? 0) + (model.item_20 ?? 0) +
                           (model.item_21 ?? 0) + (model.item_22 ?? 0);
        decimal annualToMonthly = annualSum / 365m * 30m;

        // Total expenditure
        model.item_23 = Math.Round((double)(weeklyToMonthly + monthlySum + annualToMonthly), 2);
        StateHasChanged(); // Ensure UI updates
    }

