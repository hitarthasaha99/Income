                                <td>@member.item_2</td>
                                <td>@member.item_3</td>
                                <td>@member.gender</td>
                                <td>@member.age</td>
                                <td>@member.item_6</td>
                                <td>@member.item_7</td>
                                <td>@member.item_8</td>
                                <td>@member.item_9</td>
                                <td>@member.item_10</td>
                                <td>@member.item_11</td>
