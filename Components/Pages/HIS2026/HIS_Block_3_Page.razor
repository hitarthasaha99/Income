                                    </InputSelect>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-floppy-fill me-1"></i>
                            Save
                        </button>
                        <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">Close</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

@code {
    int SelectedFsuId = SessionStorage.SelectedFSUId;
    private CommonConfig commonConfig = new CommonConfig();
    DateTime survey_time = DateTime.Now;

    private List<Tbl_Block_3> block3Members = new();
    private Tbl_Block_3 newMember = new Tbl_Block_3();

    private async Task<bool> ValidateJsInputs()
    {
        bool isNameValid = await JSRuntime.InvokeAsync<bool>("validationHelpers.validateName");
        if (!isNameValid)
            return false;

        bool isAgeValid = await JSRuntime.InvokeAsync<bool>("validationHelpers.validateAge");
        if (!isAgeValid)
            return false;

        return true;
    }

    // Merged HandleSaveClicked with validation and save logic
    private async Task HandleSaveClicked()
    {
        if (!await ValidateJsInputs())
            return;

        newMember.serial_no = block3Members.Count + 1;
        newMember.id = Guid.NewGuid();
        block3Members.Add(newMember);

        newMember = new Tbl_Block_3();

        // Optionally close modal here
        // JSRuntime.InvokeVoidAsync("bootstrap.Modal.getInstance", "#addModal").ContinueWith(jsTask =>
        // {
        //     JSRuntime.InvokeVoidAsync("bootstrap.Modal.getInstance", "#addModal").Result.Hide();
        // });
    }
}
