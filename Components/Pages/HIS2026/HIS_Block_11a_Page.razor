@page "/dashboard/his/block_11a"
@layout Income.Components.Layout.DashboardLayout
@inject NavigationManager NavigationManager
@inject IToastService toastService
@using FluentValidation
@using Income.Database.Models.Common
@using Income.Database.Models.HIS_2026
@using Income.Validators.HIS2026
@using Microsoft.AspNetCore.Components.Forms
@using System.Linq.Expressions
@using System.Reflection
@inject IJSRuntime JSRuntime
@inject ILoggingService loggingService
@inject IValidator<Tbl_Block_11a> Validator

@if (editContext !=null)
{
    <EditForm EditContext="editContext">
        <div class="main-content">
            <CommonContentHeader SelectedFsuId="@SelectedFsuId" survey_time="@survey_time" />
            <div class="card custom-card">
                <div class="px-3 pt-3 d-flex justify-content-between align-items-center">
                    <h5 class="text-dark mb-2">
                        <span class="text-primary me-1">Block 11:</span> Current transfers paid
                    </h5>
                     @* add comment *@
                     @if (SessionStorage.GetUserRole() != SessionStorage.UserRole.JSO)
                     {

                         <div class="card-tools d-flex justify-content-end align-items-end p-2">
                             <NavLink class="btn btn-primary"><i class="fi fi-rr-comment-alt me-2"></i>Comment</NavLink>
                         </div>
                     }
                </div>
                <div class="card-header border border-secondary-subtle">
                    <h3 class="card-title">
                        <span class="text-primary me-1">Block 11a:</span>Particulars of transfers paid on regular / periodic basis to non-household member
                    </h3>
                    
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <fieldset disabled="@(SessionStorage.GetUserRole() != SessionStorage.UserRole.JSO)">
                            <table class="table table-bordered align-middle mb-0">
                                <thead>
                                    <tr style="border-bottom:1px solid #2471DD;">
                                        <th class="text-center">Q.no.</th>
                                        <th class="text-center">Question description</th>
                                        <th class="text-center">Entry</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="row-light-blue">
                                        <td>
                                            <label class="form-label mb-0">
                                                <span class="form-badge">Q11.1</span>
                                            </label> 
                                        </td>
                                        <td>Whether transfers paid to other households in the form of family support payments (such as alimony, child and parental support) during last month?</td>
                                        <td>
                                            <select class="form-select form-select-sm"
                                                    value="@selectBlock11A.item_1"
                                                    @onchange="e =>
                                                    {
                                                        UpdateFieldAndValidate(() => selectBlock11A.item_1, e);
                                                        q11_1Condition(e);
                                                    }">
                                                    <option value="">-Select-</option>
                                                    <option value="1">1-yes</option>
                                                    <option value="2">2-no</option>
                                            </select>

                                            <ValidationMessage For="@(() => selectBlock11A.item_1)" />
                                        </td>
                                    </tr>
                                    <tr class="row-light-blue">
                                        <td>
                                            <label class="form-label mb-0">
                                                <span class="form-badge">Q11.2</span>
                                            </label> 
                                        </td>
                                        <td>
                                            If code 1 in 11.1,<br />
                                            Amount of such transfer paid during last month (yes - 1, no – 2)
                                        </td>
                                        <td>
                                            <input type="number" class="form-control form-control-sm no-spinner"
                                                    onkeypress="return /^(\d*)$/.test(event.target.value + event.key)"
                                                    disabled="@(!isQ11_2Enable)"
                                                    value="@selectBlock11A.item_2"
                                                    @oninput="e => UpdateFieldAndValidate(() => selectBlock11A.item_2, e)" />

                                            <ValidationMessage For="@(() => selectBlock11A.item_2)" />
                                        </td>

                                    </tr>
                                    <tr class="row-light-pink">
                                        <td>
                                            <label class="form-label mb-0">
                                                <span class="form-badge">Q11.3</span>
                                            </label> 
                                        </td>
                                        <td>
                                            If code 2 in 11.1, <br />
                                            Whether transfers paid to other households in the form of family support payments (such as alimony, child and parental support) during last 365 days? (yes - 1, no – 2)
                                        </td>
                                        <td>
                                                <select class="form-select form-select-sm" value="@selectBlock11A.item_3" disabled="@(!isQ11_3Enable)"
                                        
                                                @onchange="e =>
                                                {UpdateFieldAndValidate(() => selectBlock11A.item_3, e);
                                                        q11_3Condition(e);
                                                }">                                                                                                                                                     
                                                <option value="">-Select-</option>
                                                <option value="1">1-yes</option>
                                                <option value="2">2-no</option>
                                            </select>
                                            <ValidationMessage For="@(() => selectBlock11A.item_3)" />
                                        </td>
                                    </tr>
                                    <tr class="row-light-pink">
                                        <td>
                                            <label class="form-label mb-0">
                                                <span class="form-badge">Q11.4</span>
                                            </label> 
                                        </td>
                                        <td>
                                            If code 1 in 11.3,<br />
                                            Number of times such transfer paid during the last 365 days
                                        </td>
                                        <td>
                                            <input type="number" class="form-control form-control-sm no-spinner"
                                                    onkeypress="return /^(\d*)$/.test(event.target.value + event.key)"
                                                    disabled="@(!isQ11_4_5Enable)"
                                                    value="@selectBlock11A.item_4"
                                                    @oninput="e => UpdateFieldAndValidate(() => selectBlock11A.item_4, e)" />

                                                    <ValidationMessage For="@(() => selectBlock11A.item_4)" />
                                                </td>
                                        </tr>
                                    <tr class="row-light-pink">
                                        <td>
                                                <label class="form-label mb-0">
                                                    <span class="form-badge">Q11.5</span>
                                            </label> 
                                        </td>
                                        <td>
                                            If code 1 in 11.3,<br />
                                            Total amount (in Rs.) transferred during the last 365 days
                                        </td>
                                        <td>
                                            <input type="number" class="form-control form-control-sm no-spinner" onkeypress="return /^(\d*)$/.test(event.target.value + event.key)" disabled="@(!isQ11_4_5Enable)"
                                            value="@selectBlock11A.item_5"
                                                @oninput="e => UpdateFieldAndValidate(() => selectBlock11A.item_5, e)"
                                            />
                                                <ValidationMessage For="@(() => selectBlock11A.item_5)" />
                                        </td>
                                    </tr>
                                    <tr class="row-light-pink">
                                        <td> 
                                            <label class="form-label mb-0">
                                                <span class="form-badge">Q11.6</span>
                                            </label> 
                                        </td>
                                        <td>Total amount (in Rs.) of regular transfer made to Non-profit organization(s) for charitable purposes during the last 365 days </td>
                                        <td>
                                            <input type="number" class="form-control form-control-sm no-spinner" onkeypress="return /^(\d*)$/.test(event.target.value + event.key)"
                                            value="@selectBlock11A.item_6"
                                            @oninput="e => UpdateFieldAndValidate(() => selectBlock11A.item_6, e)"
                                            />
                                            <ValidationMessage For="@(() => selectBlock11A.item_6)" />
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </fieldset>
                    </div>
                </div>
            </div>

        </div>
        <div class="footer">
            <!-- Remarks textarea -->
            <fieldset disabled="@(SessionStorage.GetUserRole() != SessionStorage.UserRole.JSO)">
                <div class="card custom-card">
                    <div class="card-header">
                        <h3 class="card-title">Remarks</h3>
                    </div>
                    <div class="card-body">
                        <textarea maxlength="500" class="form-control" id="remarksTextarea" rows="2" placeholder="Enter your remarks here..." @bind="block_1.block_11a_remark" oninput="validateRemarks(event)"></textarea>
                    </div>
                </div>
            </fieldset>
            <div class="row">
                <div class="col-sm-6">
                    <div class="d-flex">
                        <NavLink class="btn btn-outline-primary" @onclick="GoBack">
                            <i class="fi fi-rr-angle-left me-1" ></i>Back
                        </NavLink>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="d-flex align-items-center justify-content-end">
                        @if (SessionStorage.GetUserRole() == SessionStorage.UserRole.JSO)
                        {
                            <button class="btn btn-outline-primary me-2 is_sso action" @onclick="@(() => SaveAsync(false))">
                                <i class="fi fi-rr-disk me-1"></i>
                                Save
                            </button>
                        }
                        <NavLink class="btn btn-primary" @onclick="@(() => SaveAsync(true))">
                            Next
                            <i class="fi fi-rr-angle-right ms-1"></i>
                        </NavLink>
                    </div>
                </div>
            </div>
        </div>
    </EditForm>
}
                
<CommentModal @ref="commentModal"
            MemberList=null
            QuestionList="@(new List<string>(){"11.1","11.2","11.3","11.4","11.5","11.6"})"
            Block="11A" />


@code {
    int SelectedFsuId = SessionStorage.SelectedFSUId;
    private CommonConfig commonConfig = new CommonConfig();
    DateTime survey_time = DateTime.Now;

    private Tbl_Block_11a? selectBlock11A = new Tbl_Block_11a();
    private Tbl_Block_1? block_1 = new();

    EditContext editContext;
    ValidationMessageStore messageStore;
    DBQueries dQ = new DBQueries();
    private Block_11a_Validator validator = new();
    CommonQueries commonQueries = new();
    private bool isQ11_2Enable = false;
    private bool isQ11_3Enable = false;
    private bool isQ11_4_5Enable = false;
    CommentModal commentModal = default!;

    async Task GoBack()
    {
                NavigationManager.NavigateTo("/dashboard/his/block_10");

        // await JSRuntime.InvokeVoidAsync("__handleGoBack");
    }

    async Task OpenModal()
    {
        await commentModal.Open();
    }

    protected async override Task OnInitializedAsync()
    {
        try
        {
            Tbl_Visited_Blocks vb = new Tbl_Visited_Blocks
            {
              block_uri = "/dashboard/his/block_11a",
              block_title = "HIS Block 11a",
              block_code = CommonEnum.his_block_11a.ToString(),
            };
            await commonQueries.InsertVisitedBlock(vb);
            selectBlock11A = await dQ.Fetch_SCH_HIS_Block11(SessionStorage.selected_hhd_id);
            if (selectBlock11A == null)
            {
                selectBlock11A = new()
                {
                    id = Guid.NewGuid(),
                };
            }
            if (selectBlock11A.item_1 == 1)
            {
                isQ11_2Enable = true;
                isQ11_3Enable = false;
            }
            else if (selectBlock11A.item_1 == 2)
            {
                isQ11_2Enable = false;
                isQ11_3Enable = true;
            }

            if (selectBlock11A.item_3 == 1)
            {
                isQ11_4_5Enable = true;
            }
            editContext = new EditContext(selectBlock11A);
            messageStore = new ValidationMessageStore(editContext);
            block_1 = await dQ.FetchSingleForFsuAndHhdAsync<Tbl_Block_1>() ?? null;
            if (SessionStorage.GetUserRole() != SessionStorage.UserRole.JSO)
            {
                survey_time = selectBlock11A.survey_timestamp.GetValueOrDefault();
            }
            
            StateHasChanged();

        }
        catch (Exception ex)
        {
            await loggingService.LogError("HIS_Block_11a_Page", ex);
        }
        
    }

    private void UpdateFieldAndValidate(Expression<Func<int?>> field, ChangeEventArgs e)
    {
        var identifier = FieldIdentifier.Create(field);

        // Parse input value
        int? value = null;
        if (!string.IsNullOrWhiteSpace(e.Value?.ToString()) &&
            int.TryParse(e.Value?.ToString(), out var v))
        {
            value = v;
        }

        // Set value to the property
        var memberExpr = (MemberExpression)field.Body;
        var prop = (PropertyInfo)memberExpr.Member;
        prop.SetValue(selectBlock11A, value); // <-- make sure using your selectBlock11A object

        // Clear the error for this field
        messageStore.Clear(identifier);

        // Notify Blazor that this field changed
        editContext?.NotifyFieldChanged(identifier);
    }



    ////Check When select Q11_1 choose code 1 then enable Q11_3 and choose no code 2 then select Q11_3 input field
    private void q11_1Condition(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int value))
        {
            selectBlock11A.item_1 = value;

            isQ11_2Enable = value == 1;
            isQ11_3Enable = value == 2;

            // When Q11.2 is disabled → clear value + validation
            if (!isQ11_2Enable)
            {
                selectBlock11A.item_2 = null;

                // Clear item_2 validation when item1 changes
                var item2Field = new FieldIdentifier(selectBlock11A, nameof(selectBlock11A.item_2));
                messageStore.Clear(item2Field);
            }

            if (!isQ11_3Enable)
            {
                selectBlock11A.item_3 = null;
                selectBlock11A.item_4 = null;
                selectBlock11A.item_5 = null;
                isQ11_4_5Enable = false;
            }
        }
        else
        {
            selectBlock11A.item_1 = null;
            selectBlock11A.item_2 = null;
            selectBlock11A.item_3 = null;
            selectBlock11A.item_4 = null;
            selectBlock11A.item_5 = null;

            isQ11_2Enable = false;
            isQ11_3Enable = false;
            isQ11_4_5Enable = false;

            // Clear all error messages
            messageStore.Clear();
        }
        editContext.NotifyValidationStateChanged();
    }

    private void q11_3Condition(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int value))
        {
            selectBlock11A.item_3 = value;
            isQ11_4_5Enable = value == 1;
            if (!isQ11_4_5Enable)
            {
                selectBlock11A.item_4 = null;
                selectBlock11A.item_5 = null;

                var item4Field = new FieldIdentifier(selectBlock11A, nameof(selectBlock11A.item_4));
                var item5Field = new FieldIdentifier(selectBlock11A, nameof(selectBlock11A.item_5));
                messageStore.Clear(item4Field);
                messageStore.Clear(item5Field);

                editContext.NotifyValidationStateChanged();
            }
        }
        else
        {
            selectBlock11A.item_3 = null;
            selectBlock11A.item_4 = null;
            selectBlock11A.item_5 = null;
            isQ11_4_5Enable = false;

            var item4Field = new FieldIdentifier(selectBlock11A, nameof(selectBlock11A.item_4));
            var item5Field = new FieldIdentifier(selectBlock11A, nameof(selectBlock11A.item_5));
            messageStore.Clear(item4Field);
            messageStore.Clear(item5Field);

            editContext.NotifyValidationStateChanged();
        }
    }


    private async Task SaveAsync(bool is_go_next = false)
    {
        try
        {
            if (SessionStorage.GetUserRole() != SessionStorage.UserRole.JSO)
            {
                // Only JSO can save
                NavigationManager.NavigateTo("/dashboard/his/block_11b");
                return;
            }
            messageStore.Clear();
            var validation = Validator.Validate(selectBlock11A);

            foreach (var error in validation.Errors)
            {
                var fieldIdentifier = new FieldIdentifier(selectBlock11A, error.PropertyName);
                messageStore.Add(fieldIdentifier, error.ErrorMessage);
            }
            editContext.NotifyValidationStateChanged();

            if (!validation.IsValid)
            {
                toastService.ShowError("Please resolve all the errors");
                return;
            }
            else
            {
                int saved = await dQ.Save_SCH_HIS_Block11a(selectBlock11A);
                if (saved > 0)
                {
                    toastService.ShowSuccess("Saved successfully");
                }
                else
                {
                    toastService.ShowSuccess("Data could not be saved");
                }
                if (block_1 != null)
                {
                    await dQ.SaveAsync<Tbl_Block_1>(block_1);
                }
            }

            if (!is_go_next)
            {
                return;
            }
            
            NavigationManager.NavigateTo("/dashboard/his/block_11b");
            
        }
        catch (Exception ex)
        {
            await loggingService.LogError("HIS_Block_11a_Page_SaveAsync", ex);
        }
    }
            
}
