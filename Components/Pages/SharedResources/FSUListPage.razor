    void _handleCheckbox(ChangeEventArgs args, Tbl_Fsu_List? fsu_obj)
    {
        var action = args.Value.ToString() == "True" ? true : false;
        if (fsu_obj == null)
        {
            selected_guid = [];
            if (action == true)
            {
                foreach(var item in temp_fsu_list)
                {
                    selected_guid.Add(item.fsu_id);
                }
            }
        }
        else
        {
            if (action == true)
            {
                var is_exist = selected_guid.Contains(fsu_obj.fsu_id);
                if (!is_exist)
                {
                    selected_guid.Add(fsu_obj.fsu_id);
                }
            }
            else
            {
                selected_guid.Remove(fsu_obj.fsu_id);
            }
        }
        StateHasChanged();
        return;
    }

