    private async Task Refresh()
    {
        try
        {
            if (Schedule == "0")
            {
                WarningList = await Warning_VM.GetAllWarning("0");
            }
            else
            {
                WarningList = await Warning_VM.GetAllWarning();
            }
            if (selectedFilter == "1")
            {
                ParentWarning = WarningList.Where(x => x?.parent_comment_id == null || x.parent_comment_id == Guid.Empty).ToList();
            }
            else if (selectedFilter == "2" && SessionStorage.role_name == CommonConstants.ROLE_NAME_JSO)
            {
                ParentWarning = WarningList.Where(x => (x?.parent_comment_id == null || x.parent_comment_id == Guid.Empty) && (x?.warning_status == 4 || x?.warning_status == 2 || x?.warning_status == 5)).ToList();
            }
            else if (selectedFilter == "2" && SessionStorage.role_name == CommonConstants.ROLE_NAME_SSO)
            {
                ParentWarning = WarningList.Where(x => (x?.parent_comment_id == null || x.parent_comment_id == Guid.Empty) && (x?.warning_status == 4 || x?.warning_status == 5)).ToList();
            }
            else if (selectedFilter == "2" && SessionStorage.role_name == CommonConstants.ROLE_NAME_DS)
            {
                ParentWarning = WarningList.Where(x => (x?.parent_comment_id == null || x.parent_comment_id == Guid.Empty) && (x?.warning_status == 5)).ToList();
            }
            else if (selectedFilter == "3" && SessionStorage.role_name == CommonConstants.ROLE_NAME_JSO)
            {
                ParentWarning = WarningList.Where(x => (x?.parent_comment_id == null || x.parent_comment_id == Guid.Empty) && (x?.warning_status == 3 || x?.warning_status == 1)).ToList();
            }
            else if (selectedFilter == "3" && SessionStorage.role_name == CommonConstants.ROLE_NAME_SSO)
            {
                ParentWarning = WarningList.Where(x => (x?.parent_comment_id == null || x.parent_comment_id == Guid.Empty) && (x?.warning_status == 3 || x?.warning_status == 1 || x?.warning_status == 2)).ToList();
            }
            else if (selectedFilter == "3" && SessionStorage.role_name == CommonConstants.ROLE_NAME_DS)
            {
                ParentWarning = WarningList.Where(x => (x?.parent_comment_id == null || x.parent_comment_id == Guid.Empty) && (x?.warning_status == 3 || x?.warning_status == 1 || x?.warning_status == 2 || x?.warning_status == 4)).ToList();
            }
            // ParentWarning = WarningList.Where(x => x?.parent_comment_id == null || x.parent_comment_id == Guid.Empty).ToList();
            ChildWarning = WarningList.Where(item => item.parent_comment_id != null || item.parent_comment_id != Guid.Empty).OrderBy(x => x.created_on).ToList();
            StateHasChanged();
            return;
        }
        catch (Exception ex)
        {
            toastService.ShowError("Error while refreshing the page: " + ex.Message);
            return;

        }
    }
    private void OnFilterChanged(ChangeEventArgs e)
    {
        try
        {
            selectedFilter = e.Value?.ToString();
            if (WarningList != null && WarningList.Count() > 0)
            {
                if (selectedFilter == "1")
                {
                    ParentWarning = WarningList.Where(x => x?.parent_comment_id == null || x.parent_comment_id == Guid.Empty).ToList();
                }
                else if (selectedFilter == "2" && SessionStorage.role_name == CommonConstants.ROLE_NAME_JSO)
                {
                    ParentWarning = WarningList.Where(x => (x?.parent_comment_id == null || x.parent_comment_id == Guid.Empty) && (x?.warning_status == 4 || x?.warning_status == 2 || x?.warning_status == 5)).ToList();
                }
                else if (selectedFilter == "2" && SessionStorage.role_name == CommonConstants.ROLE_NAME_SSO)
                {
                    ParentWarning = WarningList.Where(x => (x?.parent_comment_id == null || x.parent_comment_id == Guid.Empty) && (x?.warning_status == 4 || x?.warning_status == 5)).ToList();
                }
                else if (selectedFilter == "2" && SessionStorage.role_name == CommonConstants.ROLE_NAME_DS)
                {
                    ParentWarning = WarningList.Where(x => (x?.parent_comment_id == null || x.parent_comment_id == Guid.Empty) && (x?.warning_status == 5)).ToList();
                }
                else if (selectedFilter == "3" && SessionStorage.role_name == CommonConstants.ROLE_NAME_JSO)
                {
                    ParentWarning = WarningList.Where(x => (x?.parent_comment_id == null || x.parent_comment_id == Guid.Empty) && (x?.warning_status == 3 || x?.warning_status == 1)).ToList();
                }
                else if (selectedFilter == "3" && SessionStorage.role_name == CommonConstants.ROLE_NAME_SSO)
                {
                    ParentWarning = WarningList.Where(x => (x?.parent_comment_id == null || x.parent_comment_id == Guid.Empty) && (x?.warning_status == 3 || x?.warning_status == 1 || x?.warning_status == 2)).ToList();
                }
                else if (selectedFilter == "3" && SessionStorage.role_name == CommonConstants.ROLE_NAME_DS)
                {
                    ParentWarning = WarningList.Where(x => (x?.parent_comment_id == null || x.parent_comment_id == Guid.Empty) && (x?.warning_status == 3 || x?.warning_status == 1 || x?.warning_status == 2 || x?.warning_status == 4)).ToList();
                }
            }
            StateHasChanged();
            return;
        }
		catch (Exception ex)
		{
			toastService.ShowError("Error while filtering warnings: " + ex.Message);
			return ;
		}
    }

