<div class="main-content">
    <CommonContentHeader 
        SelectedFsuId="@SelectedFsuId"
        survey_time="@survey_time" 
    />
    <div class="card custom-card">
        <div class="card-header">
            <h3 class="card-title">
                <span class="text-primary me-2">[Block 11]</span>Particulars of sampling of households
            </h3>

            @if (ShowValidateButton)
            {
                <div class="card-tools">
                    <Button class="btn btn-primary is_sso action" @onclick="@(() => OpenValidatePage())"><i class="fi fi-rr-memo-circle-check me-1"></i>Validate</Button>
                </div>
            }

        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-12">
                    <div class="mb-3">
                        <label class="form-label">
                            <span class="form-badge">1a</span>Enumerator Name
                        </label>
                        <input type="text" class="form-control is_sso" @bind="tbl_Sch_0_0_FieldOperation.enumerator_name" disabled>
                    </div>
                </div>
                <div class="col-sm-12">
                    @if (SessionStorage.GetUserRole() != SessionStorage.UserRole.JSO)
                    {
                        <div class="mb-3">
                            <label class="form-label">
                                <span class="form-badge">1b</span>Supervisor Name
                            </label>
                            <input type="text" class="form-control" @bind="tbl_Sch_0_0_FieldOperation.supervisor_name" disabled>
                        </div>
                    }
                </div>
                <div class="col-sm-12">
                    <div class="mb-3">
                        <label class="form-label">
                            <span class="form-badge">2.1</span>Date of start of field work
                        </label>
                        <input type="text" class="form-control is_sso" @bind="block_0_1.survey_timestamp" disabled>
                    </div>
                </div>
               <div class="col-sm-12">
                    <div class="mb-3">
                        <label class="form-label">
                            <span class="form-badge">2.2</span>Date of end of field work
                        </label>
                        <input type="text" class="form-control is_sso" @bind="tbl_Sch_0_0_FieldOperation.field_work_end_date" disabled>
                    </div>
               </div>
                <div class="col-sm-12">
                    <div class="mb-3">
                        <label class="form-label">
                            <span class="form-badge">3</span>total time taken to canvass the schedule by the team of enumerator (SE/JSO) (in hours)
                        </label>
                        <input type="text"
                                disabled="@(SessionStorage.FSU_Submitted)"
                               class="form-control is_sso"
                               value="@tbl_Sch_0_0_FieldOperation.time_taken"
                               onkeypress="return event.key.match(/^[0-9]$/)"
                               @oninput="TimeTakenChanged" />

                            @if (!string.IsNullOrEmpty(StatusMessage))
                            {
                                <div class="@StatusClass">@StatusMessage</div>
                            }

                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="d-flex align-items-center mb-3">
                        <label class="form-label me-3 mb-0">
                            <span class="form-badge">4</span>
                            Whether any remark has been entered by SE/JSO/SS/SSO
                        </label>
                        <div class="d-flex align-items-center">
                            <div class="customRadioButton me-5">
                                <label class="d-flex align-items-center">
                                    <input disabled type="radio" id="Yes" checked="@(!string.IsNullOrEmpty(remarks))" name="yesRemarks">
                                    <span class="label-text ms-2">Yes</span>
                                </label>
                            </div>
                            <div class="customRadioButton">
                                <label class="d-flex align-items-center">
                                    <input disabled type="radio" id="No" checked="@(string.IsNullOrEmpty(remarks))" name="yesRemarks">
                                    <span class="label-text ms-2">No</span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- 5.i -->
                <div class="col-sm-12">
                    <div class="d-flex align-items-center mb-3">
                        <label class="form-label me-3 mb-0">
                            <span class="form-badge">5.i</span>
                            In Block 9/10
                        </label>
                        <div class="d-flex align-items-center">
                            <div class="customRadioButton me-5">
                                <label class="d-flex align-items-center">
                                    <input disabled class="is_sso" value="1" type="radio"
                                           id="remarkBlockYes" name="remarks_block_9_10" checked="@remarks_block_9_10_yes">
                                    <span class="label-text ms-1" for="remarkBlockYes">Yes</span>
                                </label>
                            </div>
                            <div class="customRadioButton">
                                <label class="d-flex align-items-center">
                                    <input disabled class="is_sso" value="2" type="radio"
                                           id="remarkBlockNo" name="remarks_block_9_10" checked="@(!remarks_block_9_10_yes)">
                                    <span class="label-text ms-1"  for="remarkBlockNo">No</span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- 5.ii -->
                <div class="col-sm-12">
                    <div class="d-flex align-items-center">
                        <label class="form-label me-3 mb-0">
                            <span class="form-badge">5.ii</span>
                            Elsewhere in the schedule
                        </label>
                        <div class="d-flex align-items-center">
                            <div class="customRadioButton me-5">
                                <label class="d-flex align-items-center">
                                    <input disabled class="is_sso" value="1" type="radio"
                                            id="remarkElseYes" name="remarks_elsewhere" checked="@remarks_elsewhere_yes">
                                    <span class="label-text ms-1" for="remarkElseYes">Yes</span>
                                </label>
                            </div>
                            <div class="customRadioButton">
                                <label class="d-flex align-items-center">
                                    <input disabled class="is_sso" value="2" type="radio"
                                           id="remarkElseNo" name="remarks_elsewhere" checked="@(!remarks_elsewhere_yes)">
                                    <span class="label-text ms-1" for="remarkElseNo">No</span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="footer">
    @* Remarks Card *@
    <div class="card custom-card">
        <div class="card-header">
            <h3 class="card-title">Remarks</h3>
        </div>
        <div class="card-body">
            <textarea maxlength="500" type="text" disabled="@SessionStorage.FSU_Submitted" class="form-control disabled w-100" @bind="@remarks" placeholder="" rows="2"></textarea>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class=d-flex>
                <button class="btn btn-outline-secondary" onclick="@GoBack"><i class="fi fi-rr-angle-left me-1"></i>Back</button>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="d-flex justify-content-end">
                @if (SessionStorage.GetUserRole() == SessionStorage.UserRole.JSO && !SessionStorage.FSU_Submitted)
                {
                    <Button class="btn btn-primary is_sso action me-2" @onclick="@(() => SubmitData())"><i class="fi fi-rr-memo-circle-check me-1"></i>Submit to SSO</Button>
                }
                @if (SessionStorage.GetUserRole() == SessionStorage.UserRole.JSO && !SessionStorage.FSU_Submitted)
                {
                    <Button class="btn btn-outline-primary me-2 is_sso action" @onclick="@(() => HandleSubmit(false))"><i class="fi fi-rr-disk me-1"></i>Save</Button>
                }
                <NavLink class="btn btn-primary" @onclick="@(() => HandleSubmit(true))">Exit<i class="fi fi-rr-cross-circle ms-1"></i></NavLink>
            </div>
        </div>
    </div>
</div>

