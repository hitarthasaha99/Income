    private void TimeTakenChanged(ChangeEventArgs e)
    {
        StatusMessage = string.Empty;
        var txt = e.Value?.ToString() ?? "";
        // Validate and convert to integer
        if (int.TryParse(txt, out int value))
        {
            tbl_Sch_0_0_FieldOperation.time_taken = value;
            //Warning - if time < 5
            if ((surveyCode == 1 || surveyCode == 4) && value < 5)
            {
                StatusClass = "text-success";
                StatusMessage = "W000: Time taken should be > 5 hours";
            }
            //For zero case - time should be < 5
            else if ((surveyCode == 2 || surveyCode == 3 || surveyCode == 5 || surveyCode == 6 || surveyCode == 7) && value > 5)
            {
                StatusClass = "text-success";
                StatusMessage = "W000: Time taken should be < 5 hours";
            }
        }
        else
        {
            tbl_Sch_0_0_FieldOperation.time_taken = null;       // or null if nullable
            // StatusMessage = "Invalid entry";
            // StatusClass = "text-danger";  // red
        }
    }

    private bool HardChecksFailed()
    {
        try
        {
            StatusMessage = string.Empty;
            if (surveyCode == 1 || surveyCode == 4)
            {
                // //(iii) surveycode = 1 or 4 -> time should be zero
                // if (tbl_Sch_0_0_FieldOperation.time_taken == null || tbl_Sch_0_0_FieldOperation.time_taken <= 0)
                // {
                //     StatusMessage = "H000: Time taken cannot be blank or zero";
                //     StatusClass = "text-danger";
                // }
                //(vi) surveycode = 1 or 4 -> time should be between 5 and 60
                if (tbl_Sch_0_0_FieldOperation.time_taken < 5 || tbl_Sch_0_0_FieldOperation.time_taken > 60)
                {
                    StatusMessage = "H011 (v): Time taken must be between 5 and 60 hours";
                    StatusClass = "text-danger";
                }
            }
            return !string.IsNullOrEmpty(StatusMessage);
        }
        catch (Exception ex)
        {
            return false;
        }
    }

    private bool WarningsPresent()
    {
        try
        {
            StatusMessage = string.Empty;
            int value = tbl_Sch_0_0_FieldOperation.time_taken.GetValueOrDefault();
            //Warning - if time < 5
            // if ((surveyCode == 1 || surveyCode == 4) && value < 5)
            // {
            //     StatusClass = "text-success";
            //     StatusMessage = "W000: Time taken should be > 5 hours";
            // }
            //For zero case - time should be < 5
            if ((surveyCode == 2 || surveyCode == 3 || surveyCode == 5 || surveyCode == 6 || surveyCode == 7) && value > 5)
            {
                StatusClass = "text-success";
                StatusMessage = "W011(vi): Time taken should be < 5 hours";
            }
            return !string.IsNullOrEmpty(StatusMessage);
        }
        catch
        {
            return false;
        }
    }

    public async Task HandleSubmit(bool is_go_next)
    {

        try
        {
            if (SessionStorage.GetUserRole() == SessionStorage.UserRole.JSO)
            {
                bool isInvalid = HardChecksFailed();
                if (isInvalid)
                {
                    toastService.ShowError("Please address pending errors");
                    return;
                }
                if (WarningsPresent())
                {
                    warningVM.AddWarning(StatusMessage, "0", "11", "3");
                }
                var res = await DBQueries.SaveBlock2(tbl_Sch_0_0_FieldOperation);
                if (res.GetValueOrDefault() > 0)
                {
                    block_0_1.remarks_block_11 = remarks;
                    await DBQueries.SaveBlock1(block_0_1);
                    //await warningVM.SaveWarningAsync(false, warningVM.WarningList, "0", "11", 0);
                    await DBQueries.UpsertWarningAsync(warningVM.WarningList);
                    toastService.ShowSuccess("Data saved successfully");
                    StateHasChanged();
                    if (is_go_next)
                    {
                        NavigationManager.NavigateTo("/dashboard/fsulist");
                        return;
                    }
                }
                else
                {
                    toastService.ShowError("Failed to save data");
                    return;
                }
            }
            else
            {
                NavigationManager.NavigateTo("/dashboard/fsulist");
                return;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
        finally
        {

        }
    }

    bool isBusy = false;

    private async Task SubmitData()
    {
        try
        {
            if(isBusy)
            {
                return;
            }
            isBusy = true;
            int lookup_submit_status = 0;
            int lookup_sub_submit_status = 0;
            var fsu = await commonQueries.FetchFsuByFsuId(SessionStorage.SelectedFSUId);
            if (fsu != null)
            {
                lookup_submit_status = fsu.lookupFsuSubmitStatus.GetValueOrDefault();
            }
            if (new int [] {21,12,22,31,32, 80 }.Contains(lookup_submit_status))
            {
                toastService.ShowInfo("FSU has already been submitted");
                return;
            }
            var warnings = await DBQueries.GetWarningList(schedule: "0");
            if (warnings.Any(x => x.warning_status == 1))
            {
                toastService.ShowError("Warnings need to be resolved before submission");
                return;
            }
            var sch00block2 = await DBQueries.FetchBlock2();
            if (sch00block2 == null)
            {
                toastService.ShowError("Please save before proceeding");
                return;
            }
            Submission_Model data = new();
            data.IncomeSchHISDto = null;

            //Fetch SCH0 Data
            data.IncomeSch00block0 = await DBQueries.FetchBlock1();
            data.IncomeSch00block2_1 = await DBQueries.FetchSCH0Block2_1Data();
            data.IncomeSch00block2_2 = await DBQueries.FetchSCH0Block2_2Data();
            var block_3 = await DBQueries.GetFileData(0);
            var block_6 = await DBQueries.GetFileData(1);

            if(block_3 != null)
            {
                block_3.file_image_source = ExtractBase64(block_3.file_image_source);
            }
            if (block_6 != null)
            {
                block_6.file_image_source = ExtractBase64(block_6.file_image_source);
            }
            data.IncomeSch00block3 = new() { block_3, block_6 };
            data.IncomeSch00block_4 = await DBQueries.GetBlock4();
            data.IncomeSch00block_5 = await DBQueries.FetchSCH0Block5Data();
            data.IncomeSch00block_7 = await DBQueries.GetBlock7DataWithDeleted();
            data.IncomeSch00FieldOp = await DBQueries.FetchBlock2();
            data.IncomeSch00WarningList = await DBQueries.GetWarningList(schedule: "0");

            string json = JsonConvert.SerializeObject(data);
            Upsert_Model payload = new()
            {
                fsu_id = SessionStorage.SelectedFSUId.ToString(),
                submitted_json_data = json,
                survey_id = SessionStorage.surveyId,
                created_on = DateTime.Now
            };

            if ((SessionStorage.user_role == CommonConstants.USER_CODE_JSO) || (SessionStorage.user_role == CommonConstants.USER_CODE_JSO2))
            {
                payload.lookup_fsu_submit_status = 80;  //status will be 80 when enumerator submits (only for SCH0)
                payload.lookup_fsu_sub_submit_status = 21; // status = 21 when submitting to SSO
            }

            if ((SessionStorage.user_role == CommonConstants.USER_CODE_SSO) || (SessionStorage.user_role == CommonConstants.USER_CODE_SSO2))
            {
                payload.lookup_fsu_submit_status = 80;
                payload.lookup_fsu_sub_submit_status = 12; // status = 12 when referring back to ENM
            }

            //string final_payload = JsonConvert.SerializeObject(payload);
            var response = await networkService.PostAsync(CommonConfig.BaseController, CommonConfig.SAVE_SUBMITTED_RESPONSE, payload);
            if (response != null && response.IsSuccessStatusCode)
            {
                toastService.ShowSuccess("Data submitted successfully");
                SessionStorage.FSU_Submitted = true;
                fsu.lookupFsuSubmitStatus = 80;
                await commonQueries.UpdateFSU(fsu);
                StateHasChanged();
            }
            else
            {
                toastService.ShowError("Data could not be submitted");
            }
        }
        catch (Exception ex)
        {
            await Logger.LogError(ex.Message);
        }
        finally
        {
            isBusy = false;
        }
    }

    public static string? ExtractBase64(string dataUri)
    {
        if (string.IsNullOrWhiteSpace(dataUri))
            return null;

        // Find where the comma appears in the data URI
        var commaIndex = dataUri.IndexOf(',');

        if (commaIndex < 0 || commaIndex == dataUri.Length - 1)
            return null; // Not a valid data URI

        // Return everything after the comma → pure base64 string
        return dataUri.Substring(commaIndex + 1);
    }

    private bool IsValidationDone()
    {
        try
        {
            var warnings = warningVM.WarningList.Where(w => w.schedule == "0");
            if (warnings != null && warnings.Count() > 0)
            {
                return false;
            }
            return true;
        }
        catch
        {
            return false;
        }

    }


