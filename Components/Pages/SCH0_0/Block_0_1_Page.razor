               <div class="col-sm-12">
                    <div class="mb-3">
                        <label class="form-label"><span class="form-badge">6</span>Block No</label>
                        <input type="text" class="form-control" placeholder="" disabled @bind="block_0_1_VM.block_0_1.Block_0_6">
                    </div>
               </div>
